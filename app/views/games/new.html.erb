<div class="container">
  <div class="game">
    <h1 class="mb-4">New game</h1>
    <div class="box d-flex justify-content-between">
      <% @letters.each do |letter| %>
        <p class="letter border bg-primary text-center pt-2 text-white"><%= letter %></p>
      <% end %>
    </div>
    <p class="form-prefix">What is the longest word you can find?</p>
    <form class="d-flex mt-2" action="/score" method="POST">
      <input class="form-control" type="text" name="word">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag "letters", @letters %>
      <input type="submit" value="submit" class="btn btn-primary">
    </form>
  </div>
</div>
